<!-- Versión naranja para puntos voluminosos -->
<svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
    <defs>
        <linearGradient id="orangeGradient" x1="50%" y1="0%" x2="50%" y2="100%">
            <stop offset="0%" style="stop-color:#FFB347" />
            <stop offset="100%" style="stop-color:#FF8C00" />
        </linearGradient>
    </defs>

    <g>
        <!-- Cuerpo principal: Rectángulo naranja -->
        <rect x="1" y="1" width="28" height="18" rx="7" ry="7"
              fill="#FF8C00" 
              stroke="#FFFFFF" 
              stroke-width="1.5"/>

        <!-- Punta: línea delgada naranja -->
        <line x1="15" y1="19" x2="15" y2="28" style="stroke:#FF8C00;stroke-width:1.5" />
        
        <!-- Punto final más grande, naranja con borde blanco -->
        <circle cx="15" cy="28" r="2.5" fill="#FF8C00" stroke="#FFFFFF" stroke-width="1"/>

        <!-- Texto con la tipografía del proyecto -->
        <text x="15" y="11" 
              font-family="Volkswagen, Arial, sans-serif" 
              font-size="7" 
              font-weight="bold" 
              fill="#FFFFFF" 
              text-anchor="middle" 
              alignment-baseline="middle"
              style="text-shadow: 0px 1px 2px rgba(0,0,0,0.5);">{{ID}}</text>
    </g>
</svg>